  <script src="/vendor/bootstrap.techie.min.js"></script>
  <script src="/vendor/jquery.easing.min.js"></script>
	<script src="/vendor/jquery.scrollTo.js"></script>
  <script src="/vendor/jquery.js"></script>
	<script src="/vendor/wow.min.js"></script>
  <script src="/vendor/jquery.simple-dtpicker.js"></script>
  <script src="/scripts/main.js"></script>
  <script src="/scripts/postmessage.js"></script>
  <script src="/scripts/event.js"></script>
  <script>
    $(() => {
      loadPage(<%= id %>);
    });
  </script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/locale/en-ca.js"></script>
